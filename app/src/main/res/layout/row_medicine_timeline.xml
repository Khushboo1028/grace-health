<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_toLeftOf="@id/options_rel"
            android:minHeight="50dp"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:nestedScrollingEnabled="true"
            android:fontFamily="@font/spd_medium"
            android:textColor="@color/black"
            android:textColorHint="@color/lightGrey_hint"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:textSize="16dp"
            android:hint="Eg. Theraflu MaxGrip"
            android:background="@drawable/grey_rectangle_10"
            android:id="@+id/et_medicine"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/options_rel">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_purple"
            android:padding="5dp"
            android:layout_marginStart="16dp"
            android:id="@+id/img_add"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:padding="5dp"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            android:id="@+id/img_delete"
            />

        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>