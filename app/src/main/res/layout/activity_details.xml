<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_gradient"
    tools:context=".Login.DetailsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:id="@+id/mainrel">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_grace_logo"
                android:id="@+id/logo_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A few more details..."
                android:fontFamily="@font/spd_semibold"
                android:textSize="24dp"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:id="@+id/tv_few_details"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="These details will help us make your experience better."
                android:fontFamily="@font/spd_medium"
                android:textSize="18dp"
                android:layout_marginHorizontal="36dp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_few_details"
                android:textColor="@color/white"
                android:id="@+id/tv_note"
                />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_note"
                android:layout_marginTop="24dp"
                android:id="@+id/gender_rel">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_male"
                    android:layout_marginHorizontal="24dp"
                    android:id="@+id/img_male"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_male"
                    android:src="@drawable/ic_female"
                    android:layout_marginHorizontal="24dp"
                    android:id="@+id/img_female"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender_rel"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/white_border_login"
                android:id="@+id/dob_rel">


                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/first_aid_circle"
                    android:id="@+id/circle_view1"/>


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="13dp"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:src="@drawable/ic_cake_purple" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:textSize="16dp"
                    android:layout_toRightOf="@id/circle_view1"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/spd_medium"
                    android:text="February 16, 2020"
                    android:id="@+id/tv_dob"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/dob_rel"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/spd_semibold"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:id="@+id/tv_text_weight"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="6dp"
                android:minHeight="6dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/tv_text_weight"
                android:progress="10"
                android:min="10"
                android:thumb="@drawable/seekbar_slider"
                android:progressDrawable="@drawable/seekbar_ruler"
                android:id="@+id/weight_seekbar"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70 kg"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/weight_seekbar"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/spd_semibold"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:id="@+id/tv_weight"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_weight"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/spd_semibold"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:id="@+id/tv_text_height"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="6dp"
                android:minHeight="6dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/tv_text_height"
                android:progress="10"
                android:min="50"
                android:thumb="@drawable/seekbar_slider"
                android:progressDrawable="@drawable/seekbar_ruler"
                android:id="@+id/height_seekbar"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="165 cm"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/height_seekbar"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/spd_semibold"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:id="@+id/tv_height"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spd_medium"
                android:textSize="16dp"
                android:background="@drawable/white_rectangle_20"
                android:backgroundTint="@color/violet"
                android:textColor="@color/white"
                android:layout_below="@id/tv_height"
                android:text="Continue"
                android:layout_marginTop="24dp"
                android:id="@+id/btn_continue"/>



        </RelativeLayout>

    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:id="@+id/progressBar"/>


</RelativeLayout>