<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="150dp"
    android:background="@drawable/grey_rectangle_ripple_10">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:scaleType="fitCenter"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/image_grid"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_grid"
        android:lines="2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:paddingEnd="8dp"
        android:fontFamily="@font/spd_medium"
        android:textColor="@color/navyBlueText"
        android:textSize="18dp"
        android:text="Hospitals and Clinics"
        android:id="@+id/tv_place_grid"/>



</RelativeLayout>